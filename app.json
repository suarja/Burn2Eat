{
  "name": "Burn2Eat",
  "slug": "Burn2Eat",
  "scheme": "burn2eat",
  "version": "1.0.0",
  "orientation": "portrait",
  "userInterfaceStyle": "automatic",
  "icon": "./assets/icons/app/ios-dark.png",
  "updates": {
    "fallbackToCacheTimeout": 0
  },
  "newArchEnabled": true,
  "jsEngine": "hermes",
  "assetBundlePatterns": [
    "**/*"
  ],
  "android": {
    "icon": "./assets/icons/app/adaptive-icon.png",
    "package": "com.burn2eat",
    "adaptiveIcon": {
      "backgroundColor": "#ffffff",
      "foregroundImage": "./assets/icons/app/adaptive-icon.png",
      "monochromeImage": "./assets/icons/app/adaptive-icon.png"
    },
    "allowBackup": false,
    "edgeToEdgeEnabled": true
  },
  "ios": {
    "icon": {
      "light": "./assets/icons/app/ios-light.png",
      "dark": "./assets/icons/app/ios-dark.png",
      "tinted": "./assets/icons/app/ios-tinted.png"
    },
    "supportsTablet": true,
    "bundleIdentifier": "com.burn2eat.swarecito"
  },
  "web": {
    "favicon": "./assets/images/app-icon-web-favicon.png",
    "bundler": "metro"
  },
  "plugins": [
    "expo-router",
    "expo-localization",
    "expo-font",
    [
      "expo-splash-screen",
      {
        "image": "./assets/icons/app/splash-icon-dark.png",
        "imageWidth": 200,
        "resizeMode": "contain",
        "backgroundColor": "#ffffff",
        "dark": {
          "image": "./assets/icons/app/splash-icon-light.png",
          "backgroundColor": "#000"
        }

      }
    ],
    [
      "expo-camera",
      {
        "cameraPermission": "Pour scanner les codes-barres des aliments et calculer l'effort nécessaire pour les brûler",
        "microphonePermission": false
      }
    ],
    [
      "react-native-edge-to-edge",
      {
        "android": {
          "parentTheme": "Light",
          "enforceNavigationBarContrast": false
        }
      }
    ]
  ],
  "experiments": {
    "tsconfigPaths": true
  },
  "extra": {
    "ignite": {
      "version": "UNKNOWN"
    },
    "eas": {
        "projectId": "de25f34f-220d-40c9-98e9-cbc455e55dd8"
      }
  }
}
